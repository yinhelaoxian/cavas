.cropper-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.cropper-canvas {
  border: 1px solid #ddd;
  border-radius: 8px;
  background: #f8f8f8;
  touch-action: none;
  user-select: none;
}

.mode-switch {
  margin-top: 10px;
  display: flex;
  gap: 10px;
}

.mode-btn {
  background: #f0f0f0;
  color: #666;
  border: 1px solid #ddd;
}

.mode-btn.active {
  background: #007aff;
  color: white;
  border-color: #007aff;
}
/* pages/index/index.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  min-height: 100vh;
  box-sizing: border-box;
  background-color: #f5f5f5;
}

.canvas-container {
  position: relative;
  margin-bottom: 40rpx;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  animation: fadeIn 0.5s ease-out;
}

.image-canvas {
  background-color: #ffffff;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  display: block;
}

/* 隐藏的临时画布，移出屏幕外 */
.temp-canvas {
  position: absolute;
  top: -9999px;
  left: -9999px;
  opacity: 0;
  pointer-events: none;
}

.controls {
  display: flex;
  flex-direction: row;
  gap: 20rpx;
  flex-wrap: wrap;
  justify-content: center;
  margin-bottom: 30rpx;
  width: 100%;
  animation: fadeIn 0.5s ease-out 0.2s both;
}

.control-btn {
  background-color: #ffffff;
  color: #333333;
  border: 2rpx solid #e0e0e0;
  border-radius: 40rpx;
  padding: 18rpx 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  line-height: 1.5;
  text-align: center;
}

.control-btn:active {
  transform: scale(0.98);
  background-color: #f8f8f8;
}

.control-btn.primary {
  background-color: #4CAF50;
  color: #ffffff;
  border-color: #4CAF50;
}

.control-btn.primary:active {
  background-color: #45a049;
  border-color: #45a049;
}

.control-btn[disabled] {
  background-color: #f0f0f0;
  color: #cccccc;
  border-color: #eeeeee;
  box-shadow: none;
  transform: none;
}

.tips {
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  padding: 30rpx;
  margin-top: 20rpx;
  width: 90%;
  max-width: 650rpx;
  text-align: left;
  box-sizing: border-box;
  border: 1rpx solid rgba(0, 0, 0, 0.05);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  animation: fadeIn 0.5s ease-out 0.4s both;
}

.tips-text {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.6;
  display: block;
}

/* 响应式设计，适应窄屏 */
@media (max-width: 375px) {
  .controls {
    flex-direction: column;
    align-items: center;
  }
  
  .control-btn {
    width: 80%;
    max-width: 400rpx;
  }
}

/* 渐入动画 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
<!-- index.wxml -->
<view class="page-container">
  <image-cropper
    id="cropperComp"
    width="{{350}}"
    height="{{350}}"
    bind:ready="onCropperReady"
  />

  <button bindtap="chooseImage" style="margin-top: 20px; width: 100%;" disabled="{{!cropperReady}}">
    选择图片（就绪: {{cropperReady ? '是' : '否'}}）
  </button>
  <button bindtap="rotateImage" style="margin-top: 10px; width: 100%;" disabled="{{!cropperReady}}">
    旋转图片
  </button>
  <button bindtap="saveImage" style="margin-top: 10px; width: 100%;" disabled="{{!cropperReady}}">
    保存剪裁图片
  </button>
  <button bindtap="resetImage" style="margin-top: 10px; width: 100%;" disabled="{{!cropperReady}}">
    重置位置
  </button>
</view>